<script src="https://res.wx.qq.com/open/js/jweixin-1.6.0.js"></script>
<%= wechat_config_js debug: false, api: %w(closeWindow) -%>

<div class="weui-msg">
  <div class="weui-msg__text-area">
    <h1 class="weui-msg__title">登记您的联系方式</h1>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="weui-cells_title">必填，用于发送代码包</div>
  <div class="weui-cells weui-cells_form">
    <div class="weui-cell">
      <div class="weui-cell__hd"><label class="weui-label">邮箱</label></div>
      <div class="weui-cell__bd weui-cell_primary">
        <%= f.email_field :email, placeholder: "username@gmail.com", class: 'weui-input' -%>
      </div>
    </div>
  </div>
  <div class="weui-cells_title">选填，用于Discord群识别付费用户</div>
    <div class="weui-cell">
      <div class="weui-cell__hd"><label class="weui-label">Discord name</label></div>
      <div class="weui-cell__bd weui-cell_primary">
        <%= f.text_field :discord_username, placeholder: "EricGuo#6703 / 新的用户名", class: 'weui-input' -%>
      </div>
    </div>
  </div>
  <div class="weui-btn-area">
    <%= f.submit "Confirm", class: 'weui-btn weui-btn_primary' %>
    <a href="javascript:wx.closeWindow();" class="weui-btn weui-btn_plain-default">Close</a>
  </div>
<% end %>
